{
  "openapi": "3.0.0",
  "info": {
    "title": "OpenClaw Dashboard",
    "description": "API Documentation for OpenClaw Dashboard",
    "version": "1.0.0"
  },
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login a user",
        "description": "Authenticate using email and password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "example": {
                  "token": "ey..."
                }
              }
            }
          }
        }
      }
    }
    
    /** Populate this further with all routes systematically **/
  }
}